<div class="post row" id="post_<%= post.id %>">
  <p class="col-1"><%= post.id %></p>
  <p class="col-3"><%= post.user.name %></p>
  <p class="col-2"><%= l post.created_at %></p>
  <% if @current_user && @current_user.id == post.user %>
    <%= link_to("削除", "/posts/#{post.id}", class: "col-1", method: :delete, remote: true) %>
  <% end %>
</div>
<p class="text-left"><%= post.content %></p>
